#! /bin/bash
sudo apt update && sudo apt upgrade -y
sudo apt install postgresql -y
sudo apt install golang -y
sudo git clone https://github.com/luispfcanales/go-ec2.git
sudo cd ./go-ec2
sudo go mod tidy
sudo go build -o server
